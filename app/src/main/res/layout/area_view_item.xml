<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp">

    <LinearLayout
        android:id="@+id/area_view_item_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_view"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/area_view_item_ImageView"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_border_view"
            android:scaleType="centerCrop"
            android:src="@drawable/dt_icon" />

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/area_view_item_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_semibold"
                android:gravity="center_vertical"
                android:text="구역이름"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/area_view_item_address_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_semibold"
                android:gravity="center"
                android:text="구역주소"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/area_view_item_m_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_semibold"
                android:gravity="center"
                android:text="떨어진 거리"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/icon_favorite" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>